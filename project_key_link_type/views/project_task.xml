<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_task_form2" model="ir.ui.view">
        <field name="name">project_key_link_type.view_task_form2</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2" />
        <field name="arch" type="xml">
            
            <field name="user_ids" position="before">
                <!-- <field name="code"/> -->
            </field>

        </field>        
    </record>

    <record id="view_task_tree2" model="ir.ui.view">
        <field name="name">project_key_link_type.view_task_tree2</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_tree2" />
        <field name="arch" type="xml">

            <field name="name" position="before">
                <!-- <field name="code" /> -->
            </field>

        </field>
    </record>

    <record id="view_task_kanban" model="ir.ui.view">
        <field name="name">project_key_link_type.view_task_kanban</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_kanban" />
        <field name="arch" type="xml">

            <xpath expr="//strong[hasclass('o_kanban_record_title')]" position="before">
                <!-- <span>[<field name="code" />]</span> -->
            </xpath>

        </field>
    </record>
    
    <record id="view_task_search_form" model="ir.ui.view">
        <field name="name">project_key_link_type.view_task_search_form</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_search_form" />
        <field name="arch" type="xml">

            <field name="name" position="attributes">
                <attribute name="filter_domain">['|', ('name', 'ilike', self),('code', 'ilike', self)]</attribute>
            </field>

        </field>
    </record>

</odoo>
